# Fundamental Analysis
print("FundAMENTAL ANALYSIS".center(65, "-"))

fundamental = {
    "definition": "Fundamental analysis compares intrinsic value with market price.",
    "good trade": "If Intrinsic Value > Market Price → Good Trade",
    "logic": "Intrinsic Value > Market Price → BUY"
}

print(fundamental["definition"])
print(fundamental["good trade"])
print(fundamental["logic"])

print("\nMain tips count:", len(fundamental))

